<!-- app/views/boletos/edit.html.erb -->
<div class="max-w-md mx-auto bg-white shadow-md overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h2 class="text-lg font-semibold text-gray-800">Edit Boleto</h2>
  </div>
  <div class="border-t border-gray-200">
    <form action="<%= boleto_path(@boleto_hash['id']) %>" method="post">
      <%= hidden_field_tag '_method', 'put' %>
      <div class="p-6">
        <label for="status" class="block font-medium text-sm text-gray-700">Status</label>
        <%= select_tag 'status', options_for_select([['Opened', 'opened'], ['Overdue', 'overdue']], @boleto_hash['status']), class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required: true %>
      </div>
      <div class="px-4 py-3 sm:px-6 text-right">
        <input type="submit" value="Update Boleto" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
      </div>
    </form>
  </div>
</div>

<% if @boleto %>
  <div class="max-w-md mx-auto bg-white shadow-md overflow-hidden sm:rounded-lg lg:max-w-4xl mb-8"> <!-- Added bottom margin here -->
    <div class="px-4 py-5 sm:px-6">
      <h2 class="text-lg font-semibold text-gray-800">Edit Boleto</h2>
    </div>
    <div class="border-t border-gray-200">
      <%= form_tag(boleto_path(@boleto['id']), method: "put") do %>
        <div class="p-6 grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <%= label_tag :amount, "Amount", class: "block font-medium text-sm text-gray-700" %>
            <%= number_field_tag :amount, @boleto['amount'], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required: true %>
          </div>

          <div>
            <%= label_tag :expire_at, "Expire At", class: "block font-medium text-sm text-gray-700" %>
            <%= date_field_tag :expire_at, @boleto['expire_at'], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required: true %>
          </div>

          <div class="sm:col-span-2">
            <%= label_tag :tags, "Tags", class: "block font-medium text-sm text-gray-700" %>
            <%= text_field_tag :tags, @boleto['tags'].join(', '), class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
          </div>

          <div class="sm:col-span-2">
            <%= label_tag :notes, "Notes", class: "block font-medium text-sm text-gray-700" %>
            <%= text_area_tag :notes, @boleto['notes'], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
          </div>

          <div>
            <%= label_tag :days_for_sue, "Days for Sue", class: "block font-medium text-sm text-gray-700" %>
            <%= number_field_tag :days_for_sue, @boleto['days_for_sue'], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
          </div>

          <div>
            <%= label_tag :sue_code, "Sue Code", class: "block font-medium text-sm text-gray-700" %>
            <%= text_field_tag :sue_code, @boleto['sue_code'], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
          </div>

          <div class="sm:col-span-2">
            <%= label_tag :instructions, "Instructions", class: "block font-medium text-sm text-gray-700" %>
            <%= text_area_tag :instructions, @boleto['instructions'], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
          </div>

          <div class="sm:col-span-2">
            <%= label_tag :description, "Description", class: "block font-medium text-sm text-gray-700" %>
            <%= text_area_tag :description, @boleto['description'], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
          </div>

          <div>
            <%= label_tag :reduction_amount, "Reduction Amount", class: "block font-medium text-sm text-gray-700" %>
            <%= number_field_tag :reduction_amount, @boleto['reduction_amount'], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
          </div>

          <div class="px-4 py-3 sm:px-6 text-right">
            <%= submit_tag "Update Boleto", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <p>Boleto not found.</p>
<% end %>

<div id="<%= dom_id boleto %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Codigo:</strong>
    <%= boleto.codigo %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Vencimento:</strong>
    <%= boleto.vencimento %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Valor:</strong>
    <%= boleto.valor %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this boleto", boleto, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this boleto", edit_boleto_path(boleto), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>

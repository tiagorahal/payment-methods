<!-- app/views/boletos/new.html.erb -->
<div class="max-w-md mx-auto bg-white shadow-md overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <h2 class="text-lg font-semibold text-gray-800">Create Boleto</h2>
  </div>
  <div class="border-t border-gray-200">
    <%= form_with(model: @boleto, url: boletos_path, method: "post", local: true) do |form| %>
      <div class="p-6">
        <%= form.label :amount, class: "block font-medium text-sm text-gray-700" %>
        <%= form.number_field :amount, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required: true %>
      </div>

      <div class="p-6">
        <%= form.label :expire_at, class: "block font-medium text-sm text-gray-700" %>
        <%= form.date_field :expire_at, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required: true %>
      </div>

      <div class="p-6">
        <%= form.label :customer_person_name, class: "block font-medium text-sm text-gray-700" %>
        <%= form.text_field :customer_person_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required: true %>
      </div>

      <div class="p-6">
        <%= form.label :customer_cnpj_cpf, class: "block font-medium text-sm text-gray-700" %>
        <%= form.text_field :customer_cnpj_cpf, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required: true %>
      </div>

      <div class="p-6">
        <%= form.label :customer_state, class: "block font-medium text-sm text-gray-700" %>
        <%= form.text_field :customer_state, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required: true %>
      </div>

      <div class="p-6">
        <%= form.label :customer_city_name, class: "block font-medium text-sm text-gray-700" %>
        <%= form.text_field :customer_city_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required: true %>
      </div>

      <div class="p-6">
        <%= form.label :customer_zipcode, class: "block font-medium text-sm text-gray-700" %>
        <%= form.text_field :customer_zipcode, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required: true %>
      </div>

      <div class="p-6">
        <%= form.label :customer_address, class: "block font-medium text-sm text-gray-700" %>
        <%= form.text_field :customer_address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required: true %>
      </div>

      <div class="p-6">
        <%= form.label :customer_neighborhood, class: "block font-medium text-sm text-gray-700" %>
        <%= form.text_field :customer_neighborhood, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required: true %>
      </div>

      <div class="px-4 py-3 sm:px-6 text-right">
        <%= form.submit "Create Boleto", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>
